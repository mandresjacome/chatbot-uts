# Configuración del Chatbot UTS v1.3.1

# API Key de Google Gemini (REQUERIDA)
# Obtén tu API key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Configuración del servidor
PORT=3001
NODE_ENV=development

# Token de administrador para el panel de admin
# Cambia este valor por uno seguro en producción
ADMIN_TOKEN=tu_token_super_secreto_aqui

# Configuración de IA
# true = usar Gemini AI, false = usar respuestas mock
USE_LLM=true

# Base de datos
# Si DATABASE_URL está definida, usa PostgreSQL, sino usa SQLite
# DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_uts
DB_SQLITE_PATH=src/db/database.db
